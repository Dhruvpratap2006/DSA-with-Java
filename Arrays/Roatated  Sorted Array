public class ARRAYS_ASSINGEMENT {

    public static void main(String[] args) {
        int nums[] = {4,5,6,7,0,1,2};
        int target = 0;
        System.out.println(SortedArray(nums, target));
    }

    public static int SortedArray(int nums[] , int target){
        int start = 0;
        int end = nums.length-1;

        while(start <= end){

            int mid = (start + end)/2;
            // Check if element is in middle or not
            if(target == nums[mid]){
                return mid;
            }
            if(start <= mid){ // Check towards left side
                // First check does left array is sorted or not
                if(target >= nums[start] && target <= nums[mid]){
                    end = mid-1; 
                }
                else{
                    start = mid + 1; // if left array is not sorted then shift towards to right
                }

            }
            else{ // Check towards right side
                if(target >= nums[mid] && target <= nums[end]){
                    start = mid + 1;
                }
                else{ // shift towards left
                    end = mid -1;
                }
            }

        }
        return -1;
    }
    
}
